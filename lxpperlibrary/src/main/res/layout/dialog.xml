<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginRight="80dp"
    android:layout_marginLeft="80dp"
    >





    <TextView
        android:id="@+id/dialogSingUpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="14sp"
        android:text=""
        android:padding="30dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/dialogLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialogSingUpText"
        android:background="#d2d3d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialogLine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogSingUpCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="#999"
            android:textSize="14sp"

            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#d2d3d5" />


        <TextView
            android:id="@+id/dialogSingUpConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/permission_setting"
            android:textColor="#0f0"
            android:textSize="14sp"

            />
    </LinearLayout>

</RelativeLayout>
